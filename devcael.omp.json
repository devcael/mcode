{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": true,
    "version": 2,
    "palette": {
        "white": "#F6F1F1",
        "closer": "p:os",
        "blue": "#AFD3E2",
        "blue-2": "#19A7CE",
        "blue-3": "#146C94"
    },
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "p:blue-3",
                    "style": "plain",
                    "template": "{{ .Name }}",
                    "type": "shell",
                    "properties": {
                        "mapped_shell_names": {
                            "pwsh": "\uE62A",
                            "shell": "\uE62A",
                            "cmd": "\uE62A",
                            "lua": "\uE62A",
                            "nu": "\uE62A",
                            "fish": "\uE62A",
                            "zsh": "\uE62A",
                            "bash": "\uF17C"
                        }
                    }
                },
                {
                    "foreground": "p:blue",
                    "style": "plain",
                    "template": " {{ .UserName }}@{{ .HostName }}",
                    "type": "session"
                },
                {
                    "foreground": "p:blue-2",
                    "properties": {
                        "folder_separator_icon": "/",
                        "style": "full",
                        "home_icon": "\u26a1"
                    },
                    "style": "plain",
                    "template": " {{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "p:white",
                    "properties": {
                        "branch_icon": ""
                    },
                    "style": "plain",
                    "template": "<p:blue-3>git:(</>{{ .HEAD }}<p:blue-3>)</>",
                    "type": "git"
                },
                {
                    "foreground": "p:blue-2",
                    "style": "plain",
                    "template": " \u2717",
                    "type": "status"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "segments": [
                {
                    "style": "plain",
                    "template": " ðŸš€<p:white> DevCael! ",
                    "type": "text"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "p:blue",
                    "style": "plain",
                    "template": "\u279c",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ]
}